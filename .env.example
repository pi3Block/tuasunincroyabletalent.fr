# ===========================================
# The AI Voice Jury - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://voicejury:voicejury_secret@postgres:5432/voicejury

# Redis
REDIS_URL=redis://redis:6379/0

# Ollama LLM
OLLAMA_HOST=http://ollama:11434

# Spotify API (get from https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Genius API for lyrics (get from https://genius.com/api-clients)
GENIUS_API_TOKEN=your_genius_api_token
GENIUS_API_CLIENT_ID=your_genius_client_id
GENIUS_API_CLIENT_ACCESS_TOKEN=your_genius_access

# Application
SECRET_KEY=change-this-to-a-random-string-in-production
DEBUG=true

# Audio Processing
WHISPER_MODEL=turbo
AUDIO_OUTPUT_DIR=/app/audio_files
MAX_AUDIO_DURATION=300

# GPU (optional)
CUDA_VISIBLE_DEVICES=0
